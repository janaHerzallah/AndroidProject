<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Property Title -->
    <TextView
        android:id="@+id/propertyTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Property Title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <!-- Price -->
    <TextView
        android:id="@+id/propertyPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$1000"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="8dp"/>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/featureButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Feature" />

        <Button
            android:id="@+id/updatePriceButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update Price"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- New Remove button -->
    <Button
        android:id="@+id/removeFeatureButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove from Special Offers"
        android:layout_marginTop="8dp"/>
</LinearLayout>
