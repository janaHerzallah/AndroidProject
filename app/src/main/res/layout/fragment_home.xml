<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- About Us Section -->
    <TextView
        android:id="@+id/aboutUsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/aboutUsContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to [Your Company Name], a trusted leader in the real estate industry. We are dedicated to providing personalized property solutions..."
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="24dp"/>

    <!-- Real Estate Company History Section -->
    <TextView
        android:id="@+id/historyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Our History"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/historyContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Founded in [Year], [Your Company Name] has grown from a small family-run business to a leader in the real estate industry..."
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"/>

</LinearLayout>
